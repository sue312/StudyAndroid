<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Toolbar_1"
        app:navigationIcon="@drawable/ic_back_1"
        app:logo="@drawable/ic_people1"
        app:title="@string/toolbar_1"
        app:titleTextColor="@color/Toolbar_2"
        app:titleMarginStart="10dp"
        app:subtitle="sue"
        app:subtitleTextColor="@color/Toolbar_3"/>

<!--    <com.android.study.view.MyTextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:text="@string/tv_a"
        android:textSize="32dp"
        android:textColor="@color/red"
        android:textStyle="italic"
        android:gravity="center"

        android:shadowRadius="0.1"
        android:shadowColor="@color/black"
        android:shadowDy="5.0"
        android:shadowDx="5.0"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <requestFocus/>
    </TextView>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_selector"

        android:text="@string/btn_1"
        />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:hint="@string/et_1"
        android:textColorHint="@color/ed_100"
        android:inputType="number"

        android:drawableLeft="@drawable/ic_money1"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white"

        />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:src="@drawable/ic_people1"

        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true" />

    <ProgressBar
        android:id="@+id/pb_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>